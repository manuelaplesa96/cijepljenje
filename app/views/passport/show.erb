<div class="row" style="height: 100%;">
  <div class="col-3">
    <%= erb :'passport/partials/nav_public_side' %>
  </div>
  <div class="col-9">
    <div class="row mb-1 mt-4">
      <h4>Potvrda o cijepljenju za zahtjev #<%= @reference %></h4>
    </div>
    <% flash.keys.each do |type| %>
      <div data-alert class="flash alert radius col-8 alert-<%= type %>" id="flash">
        <%= flash[type] %>
      </div>
    <% end %>
    <div class="row">
      <div class="mt-4">
        <div class="card" style="width: 18rem;">
          <img class="card-img-top" src="/images/potvrda.png" alt="Potvrda">
        </div>
        <a href="/passport" class="btn btn-outline-dark" role="button" aria-pressed="true">Povratak</a>
      </div>
    </div>
  </div>
</div>
